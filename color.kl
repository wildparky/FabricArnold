// FabricArnold Extension

require Math;

struct ArnoldRGB {
  Float32 r;
  Float32 g;
  Float32 b;
};

struct ArnoldRGBA {
  Float32 r;
  Float32 g;
  Float32 b;
  Float32 a;
};

alias ArnoldRGB ArnoldColor; // same as ArnoldRGB

function ArnoldColor AiColor(Float32 f) = "fe_AiColor";
function ArnoldColor AiColorCreate(Float32 r, Float32 g, Float32 b) = "fe_AiColorCreate";
function ArnoldRGBA AiRGBACreate(Float32 r, Float32 g, Float32 b, Float32 a) = "fe_AiRGBACreate";

